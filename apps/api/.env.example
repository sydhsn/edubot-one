# Environment variables for API - Render Deployment
ENV=production
DEBUG=False

# Database Configuration - Use MongoDB Atlas for production
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/edubot?retryWrites=true&w=majority

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key

# CORS Settings - Update with your frontend domain
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Render Configuration
PORT=10000